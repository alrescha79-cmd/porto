      src="https://github-readme-activity-graph.vercel.app/graph?username=alrescha79-cmd&bg_color=fffafa&color=000000&line=cccccc&point=000000&area=true&radius=16"
      alt="activity-graph graph light"
      width={725}
      height={400}
      class="block dark:hidden border rounded-lg"
    />
    <Image
      src="https://github-profile-trophy.vercel.app?username=alrescha79-cmd&theme=nord&column=-1&row=1&margin-w=8&margin-h=8&no-bg=true&no-frame=false&order=4"
      alt="trophy graph"
      width={725}
      height={150}
    />
    <Image
      src="https://raw.githubusercontent.com/alrescha79-cmd/alrescha79-cmd/output/snake-dark.svg"
      alt="Snake animation dark"
      width={725}
      height={150}
      class="dark:block hidden border rounded-lg"
    />
    <Image
      src="https://raw.githubusercontent.com/alrescha79-cmd/alrescha79-cmd/output/snake-light.svg"
      alt="Snake animation light"
      width={725}
      height={150}
      class="block dark:hidden border rounded-lg"
    />
  </div>
</section>
