---
import { Image } from "astro:assets"
---

<section class="animate">
  <div class="space-y-4 mb-4">
    <div class="flex justify-between">
      <p class="font-semibold text-black dark:text-white">Github Stats</p>
      <a
        target="_blank"
        href="https://github.com/alrescha79-cmd"
        class="w-fit col-span-3 group flex gap-1 items-center underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend"
      >
        <span
          class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend"
        >
          See My Github
        </span>
      </a>
    </div>
    <!-- github stats start -->
    <div class="flex gap-2">
      <Image
        src="https://visitor-badge.laobi.icu/badge?page_id=alrescha79-cmd.alrescha79-cmd&label=Profile%20Views&left_color=gray&right_color=green"
        alt="visitor-badge"
        width={100}
        height={10}
      />
      <Image
        src="https://badges.pufler.dev/repos/alrescha79-cmd"
        alt="repo-badge"
        width={100}
        height={10}
      />
      <Image
        src="https://badges.pufler.dev/commits/monthly/alrescha79-cmd"
        alt="commits-badge"
        width={125}
        height={10}
      />
    </div>
    <!-- github stats end -->
  </div>
  <!--  -->
  <div class="flex flex-col gap-2 mb-4">
    <Image
      src="https://streak-stats.demolab.com?user=alrescha79-cmd&theme=microsoft-dark"
      alt="streak graph"
      width={725}
      height={175}
      class="dark:block hidden"
    />
    <Image
      src="https://streak-stats.demolab.com?user=alrescha79-cmd&locale=en&mode=daily&theme=whatsapp-light&hide_border=false&border_radius=5&order=3"
      alt="streak graph light"
      width={725}
      height={175}
      class="block dark:hidden"
    />
    
    <Image
      src="https://github-readme-stats.vercel.app/api?username=alrescha79-cmd&hide_title=false&hide_rank=false&show_icons=true&include_all_commits=true&count_private=true&disable_animations=false&theme=chartreuse-dark&locale=en&hide_border=false&order=1"
      alt="stats graph"
      height={175}
      width={725}
      class="dark:block hidden"
    />
    <Image
      src="https://github-readme-stats.vercel.app/api?username=alrescha79-cmd&hide_title=false&hide_rank=false&show_icons=true&include_all_commits=true&count_private=true&disable_animations=false&theme=light&locale=en&hide_border=false&order=1"
      alt="stats graph light"
      height={175}
      width={725}
      class="block dark:hidden"
    />
    <Image
      src="https://github-readme-stats.vercel.app/api/top-langs?username=alrescha79-cmd&locale=en&hide_title=false&layout=compact&card_width=320&langs_count=25&theme=chartreuse-dark&hide_border=false&order=2"
      alt="languages graph"
      width={725}
      height={400}
      class="dark:block hidden"
    />
    <Image
      src="https://github-readme-stats.vercel.app/api/top-langs?username=alrescha79-cmd&locale=en&hide_title=false&layout=compact&card_width=320&langs_count=25&theme=light&hide_border=false&order=2"
      alt="languages graph light"
      width={725}
      height={400}
      class="block dark:hidden"
    />
    <Image
      src="https://github-readme-activity-graph.vercel.app/graph?username=alrescha79-cmd&bg_color=000000&color=ffffff&line=333333&point=fffafa&area=true&radius=16"
      alt="activity-graph graph dark"
      width={725}
      height={400}
      class="dark:block hidden border rounded-lg"
    />
