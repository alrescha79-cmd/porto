---
import PageLayout from "../../layouts/PageLayout.astro"
import TopLayout from "../../layouts/TopLayout.astro"
import BottomLayout from "../../layouts/BottomLayout.astro"
import { CERTIFICATIONS } from "../../consts"

---

<PageLayout title={CERTIFICATIONS.TITLE} description={CERTIFICATIONS.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">
      {CERTIFICATIONS.TITLE}
    </div>
  </TopLayout>
  <BottomLayout>
    <div class="animate container flex justify-center items-center border-b-current w-full h-32">
      <h1 class="text-4xl">Update Soon...</h1>
    </div>
  </BottomLayout>
</PageLayout>
